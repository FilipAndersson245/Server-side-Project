<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Server-side Web Development Project</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/layout.css" rel="stylesheet" type="text/css" />

    <script src="js/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="js/shieldui-all.min.js" type="text/javascript"></script>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid"> 
            
            <div class="navbar-header col-sm-12 ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="col-sm-4">
                    <ul class="nav nav-pills nav-justified">
                        <li class="@((ViewBag.activeBrowseBy == "Books") ? "active" : null) " >@Html.ActionLink("Books", "BrowseAllBooks", "Books")</li>
                        <li class="@((ViewBag.activeBrowseBy == "Authors") ? "active" : null) " >@Html.ActionLink("Authors", "ListAuthors", "Authors")</li>
                    </ul>
                </div>
                <div class="navbar-col-sm-4 col-sm-offset-5">
                    @Html.ActionLink("Jönköping Library", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-col-sm-4">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("admin", "AdminPanel", "Admins", null, null)</li>
                        <li><a href=@Url.Action("Login", "Admins")><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid text-center">
        <div class="row content">

            <!-- moved sidenav from here -->
            @{Html.RenderAction("getClassification", "Classification");}

            <div class="col-sm-10 text-left">
                @if (ViewBag.activeBrowseBy == "Books")
                {
                    using (Html.BeginForm("SearchBooks", "Books", FormMethod.Get, new { @class = "form-inline" }))
                    {
                        <div class="form-group col-sm-10 input-lg col-sm-offset-2" id="searchBar">
                            <input type="text" name="search" class="form-control" id="searchField" placeholder="Search for books">
                            <button class="btn btn-default" type="submit" id="searchBtn">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    }
                }
                else if(ViewBag.activeBrowseBy == "Authors")
                {
                    using (Html.BeginForm("searchAuthors", "Authors", FormMethod.Get, new { @class = "form-inline" }))
                    {
                        <div class="form-group col-sm-10 input-lg col-sm-offset-2" id="searchBar">
                            <input type="text" name="search" class="form-control" id="searchField" placeholder="Search for authors">
                            <button class="btn btn-default" type="submit" id="searchBtn">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    }
                }


                @RenderBody()


            </div>

        </div>
    </div>

    <div class="navbar navbar-bottom">
        <footer class="container-fluid text-center">
            <div class="col-sm-4 text-left">©@DateTime.Today.Year</div>
            <div class="col-sm-4 text-center">Project for the course Server-side Web Development</div>
            <div class="col-sm-4 text-right">Made by Filip Andersson and Jonatan Flyckt</div>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>