<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Server-side Web Development Project</title>
    <!--<link href="~/Content/Site.css" rel="stylesheet" type="text/css" /> -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/layout.css" rel="stylesheet" type="text/css" />

    <script src="js/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="js/shieldui-all.min.js" type="text/javascript"></script>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid"> 
            
            <div class="navbar-header col-sm-12 ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                <div class="navbar col-sm-2" id="myNavbar">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle black-background white" type="button" data-toggle="dropdown" id="dropdownbtn">
                            Browse by
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Books", "ListBooks", "List")</li>
                            <li>@Html.ActionLink("Authors","ListAuthors","List")</li>
                            <li><a href="#">Genre</a></li>
                        </ul>
                    </div>
                </div>
                <div class="navbar-col-sm-6 col-sm-offset-5">
                    @Html.ActionLink("Jönköping Library","Index","Home",null, new { @class = "navbar-brand hej" })
                </div>
                <div class="navbar-col-sm-4">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">Admin</a></li>
                        <li><a href=@Url.Action("Login","Update")><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    </ul>
                </div>
            </div>
        </div>



    </nav>

    <div class="container-fluid text-center">


        



        <div class="row content">
            <div class="col-sm-2 sidenav">


                <div class="collapse-group">


                    <h5>Advanced Filters</h5>
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <h4 class="panel-title">
                                <a role="button" data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne" class="trigger collapsed">
                                    Genres
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                
                                    <li> <input type="checkbox" />&nbsp;Fantasy <span>(20)</span></li> 
                                    <li> <input type="checkbox" />&nbsp;Thriller <span>(13)</span></li>
                                    <li> <input type="checkbox" />&nbsp;Textbook <span>(7)</span></li>
                                
                            </div>
                        </div>
                    </div>
                    
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingTwo">
                            <h4 class="panel-title">
                                <a role="button" data-toggle="collapse" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo" class="trigger collapsed">
                                    Authors
                                </a>
                            </h4>
                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                            <div class="panel-body">
                                
                                <li> <input type="checkbox" />&nbsp;George R.R Martin <span>(7)</span></li>
                                <li> <input type="checkbox" />&nbsp;J.K Rowling <span>(11)</span></li>
                                <li> <input type="checkbox" />&nbsp;Astrid Lindgren <span>(14)</span></li>

                            </div>
                        </div>
                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingThree">
                            <h4 class="panel-title">
                                <a role="button" data-toggle="collapse" href="#collapseThree" aria-expanded="true" aria-controls="collapseThree" class="trigger collapsed">
                                    Publication Year
                                </a>
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-10 text-left">

                    <form class="form-inline">
                        <div class="form-group col-sm-10 input-lg col-sm-offset-2" id="searchBar">
                            <input type="text" class="form-control" id="searchField" placeholder="Search for books, authors, genres...">
                            <button class="btn btn-default" type="submit" id="searchBtn">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </form>


                @RenderBody()
            </div>

        </div>
    </div>

    <div class="navbar navbar-bottom">
        <footer class="container-fluid text-center">
            <div class="col-sm-4">©@DateTime.Today.Year</div> <div class="col-sm-4">Project for the course Server-side Web Development</div>
            <div class="col-sm-4">Made by Filip Andersson and Jonatan Flyckt</div>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>