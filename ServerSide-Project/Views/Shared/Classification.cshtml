@model List<ServerSide_Project.Models.Classification>

<div class="col-sm-2 sidenav float-left align-top text-center" id="classificationOuter">
    <div class="collapse-group">
        <h5>Advanced Filters</h5>

        <div class="panel panel-default" id="classificationPanel">
            <div class="panel-heading" role="tab" id="headingOne">
                <h4 class="panel-title">
                    <a role="button" data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne" class="trigger collapsed">
                        Classification
                    </a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                <div class="panel-body">
                    @foreach (var classification in Model)
                    {
                        <li class="text-left">
                            <input name=@classification.Signum type="checkbox" value=@classification.SignId.ToString() id=@classification.Signum>
                            <label for=@classification.Signum>@classification.Signum</label>
                        </li> 
                    }
                </div>
            </div>
        </div>

    </div>
</div>