@model IEnumerable<ServerSide_Project.Models.Admin>

@{
    ViewBag.Title = "AdminPanel";
}


<div class="col-sm-2"></div>
<div class="col-sm-10">
    <h2>Admin Panel</h2>

    @Html.ActionLink("Create New Book", "CreateBook", "Books") | 
    @Html.ActionLink("Create New Admin", "CreateAdmin", "Admins") | 
    @Html.ActionLink("Create New Author", "CreateAuthor", "Authors")

</div>

@foreach (var item in Model)
{
    <div class="row" id="adminList">
        <div class="col-sm-2"></div>
        <div class="col-sm-6">
            <div class="row" id="adminListItem">
                <div class="col-sm-3" id="adminListName">
                    @Html.DisplayFor(modelItem => item.Username)
                </div>
                <div class="col-sm-3" id="adminOptions">
                    @Html.ActionLink("Delete Admin", "DeleteAdmin", "Admins", new { id = item.Username }, null)
                </div>
            </div>
        </div>
        <div class="col-sm-4"></div>
    </div>
}