<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
            integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
            crossorigin="anonymous">
    </script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <style>
        #widget {
            width: 100%;
            background-color: #ffffff;
            text-align: center;
        }

        #widgetData {
            background-color: #e4e4e4;
            padding-left: 5%;
            padding-right: 5%;
            padding-bottom: 2%;
            padding-top: 2%;
            border-radius: 5px;
        }

        #bookListItem {
            margin-bottom: 1%;
            margin-top: 1%;
            padding-bottom: 1%;
            padding-top: 1%;
            padding-left: 5%;
            padding-right: 5%;
            border: 1px solid #f1f1f1;
            background-color: #cfcfcf;
            border-radius: 8px;
            font-size: 80%;
            font-size: 120%;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        a:hover, a:active, .btn-link:hover, .btn-link:active {
            color: #003952;
        }

        a {
            color: #337ab7;
            text-decoration: none;
        }

        #searchBtn {
            background-color: #003952;
            border-color: #ffffff;
            color: #ffffff;
            height: 200%;
            width: 5%;
        }

            #searchBtn:hover {
                background-color: #005275;
                border-color: #ffffff;
            }

        #headLine {
            font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
            color: gray;
        }

        #searchField {
            width: 50%;
            height: 200%;
        }

        #searchBar {
            margin-bottom: 2%;
            margin-top: 1%;
        }

        .btn-primary {
            background-color: #003952;
            border-color: #ffffff;
        }

            .btn-primary:hover {
                background-color: #005275;
                border-color: #ffffff;
            }

        #searchField {
            width: 50%;
            height: 250%;
            display: inline-block;
        }

        #searchBar {
            margin-bottom: 2%;
            margin-top: 1%;
        }
    </style>
</head>
<body>
    <div class="col-sm-12" id="widget">
        <h1 id="headLine">Jönköping Libary</h1>
        <form id="searchBook">
            <div class="form-group col-sm-12 input-lg text-center" id="searchBar">
                <input type="text" name="search" class="form-control" id="searchField" placeholder="Search for books">
                <button class="btn btn-primary" type="submit">SEARCH</button>
            </div>
        </form>
        <div class="col-sm-12" id="widgetData">
            <script>
				var baseUrl = 'http://jffaju.eu-central-1.elasticbeanstalk.com/'
				$('#searchBook').submit(function (event) {
					event.preventDefault();
					var url = baseUrl + '/Api/Search?search=' + $("#searchField").val();
					$.ajax({
						crossDomain: true,
						url: url,
						type: 'GET',
						dataType: 'jsonp',
						jsonpCallback: 'callback',
						error: function (xhr, ajaxOptions, thrownError) {
							alert(xhr.status);
							alert(thrownError);
						}
					});
				});
				function callback(data) {
					$("#widgetData").empty()
					data.forEach(function (element) {
						$("#widgetData")
							.append("<div class=\"col-sm-12 text-center\" id=\"bookListItem\">" + "<a class=\"rowLink\" href =\"" + baseUrl + "/Book/ListBookDetails/" + element.ISBN + "\"><b>" + element.Title + "</b>" + "</div>")
					}, this);
				};
            </script>
        </div>
    </div>
</body>
</html>