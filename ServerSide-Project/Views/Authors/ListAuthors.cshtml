@model IEnumerable<ServerSide_Project.Models.Author>

@{
    ViewBag.Title = "ListAuthors";
    ViewBag.activeBrowseBy = "Authors";
}
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <h2>Authors</h2>
    </div>
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <p>
            @Html.ActionLink("Create New Author", "CreateAuthor", "Authors", null, null)
        </p>
    </div>
</div>

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-6">
                <div class="row" id="authorListItem">
                    <div class="col-sm-3" id="authorListName">
                        @Html.ActionLink(Html.Encode(item.FirstName + " " + item.LastName), "ListAuthorDetails", "Authors", new { id = item.Aid }, null)
                    </div>
                    <div class="col-sm-2">
                        <div class="row">
                            <p class="listHeadline">Year of Birth:</p>
                        </div>
                        <div class="row">
                            @if (item.BirthYear == null)
                            {
                                <span>Unknown</span>
                            }
                            else
                            {
                                @Html.Encode(item.BirthYear);
                            }
                        </div>
                    </div>
                    <div class="col-sm-3" id="authorOptions">
                        @Html.ActionLink("XX Edit", "Edit", new { id = item.Aid }) |
                        @Html.ActionLink("XX Details", "Details", new { id = item.Aid }) |
                        @Html.ActionLink("Delete", "DeleteAuthor", "Authors", new { id = item.Aid }, null)
                    </div>
                </div>
            </div>
            <div class="col-sm-4"></div>
        </div>
    }
