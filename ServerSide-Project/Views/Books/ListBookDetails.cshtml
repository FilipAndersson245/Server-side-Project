@model Service.Models.Book

@{
    ViewBag.Title = "ListBookDetails";
}


<div class="col-sm-6 col-sm-offset-2 align-center">
    <h2>@Html.DisplayFor(modelItem => Model.Title)</h2>
    <div class=" col-sm-3"><img src="~/Resources/Education.png" width="100%" height="100%" /></div>
       <h5>
        Written by:
        @if(Model.Authors != null && Model.Authors.Any())
        {
            foreach (var author in Model.Authors)
            {
                @author.fullName;
                Write("  ");
            }
        }
        else
        {
            Write("Unknown");
        }

    </h5>
</div>