@model IEnumerable<ServerSide_Project.Models.Author>

@{
    ViewBag.Title = "ListAuthors";
}
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <h2>Authors</h2>
    </div>
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <p>
            @Html.ActionLink("Create New Author", "CreateAuthor", "Create", null, null)
        </p>
    </div>
</div>

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-6">
                <div class="row" id="authorListItem">
                    <div class="col-sm-3" id="authorListName">
                        @Html.ActionLink(Html.Encode(item.FirstName + " " + item.LastName), "ListAuthorDetails", "List", new { id = item.ID }, null)
                    </div>
                    <div class="col-sm-2">
                        <div class="row">
                            <p class="listHeadline">Year of Birth:</p>
                        </div>
                        <div class="row">
                            @Html.DisplayFor(modelItem => item.BirthYear)
                        </div>
                    </div>
                    <div class="col-sm-3" id="authorOptions">
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "DeleteAuthor", "Delete", new { id = item.ID }, null)
                    </div>
                </div>
            </div>
            <div class="col-sm-4"></div>
        </div>
    }
