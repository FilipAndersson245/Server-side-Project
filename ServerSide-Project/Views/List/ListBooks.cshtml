@model IEnumerable<ServerSide_Project.Models.Book>

@{
    ViewBag.Title = "ListBooks";
}

<h2>ListBooks</h2>

<p>
    @Html.ActionLink("Create New", "CreateBook", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublicationYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pages)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublicationYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pages)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBook","Update", new { id=item.ISBN }, new { @class="" }) |
            @Html.ActionLink("Details", "ListBookDetails", "List", new { id=item.ISBN }, new { @class = "" }) |
            @Html.ActionLink("Delete", "DeleteBook","Delete", new { id = item.ISBN }, new { @class = "" })
        </td>
    </tr>
}

</table>
